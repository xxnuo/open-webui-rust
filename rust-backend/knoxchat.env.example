# Example configuration for using Knox Chat embeddings
# Copy this file to .env and fill in your actual values

# Enable RAG functionality
ENABLE_RAG=true

# Set Knox Chat as the embedding engine
RAG_EMBEDDING_ENGINE=knoxchat

# Knox Chat API key (required)
# Get your API key from https://knox.chat
KNOXCHAT_API_KEY=your_knox_chat_api_key_here

# Knox Chat base URL (optional, defaults to https://knox.chat)
# KNOXCHAT_BASE_URL=https://knox.chat

# Embedding model to use (optional, defaults to voyage-3.5)
# Supported models: voyage-3.5, voyage-3.5-lite, voyage-3-large, voyage-code-3, voyage-finance-2, voyage-code-2, voyage-law-2
RAG_EMBEDDING_MODEL=voyage-3.5

# Maximum concurrent Knox Chat requests (optional, defaults to 10)
# KNOXCHAT_MAX_CONCURRENT=10

# ChromaDB configuration (for vector storage)
CHROMA_HTTP_HOST=localhost
CHROMA_HTTP_PORT=8000
CHROMA_HTTP_SSL=false

# Other RAG settings
RAG_CHUNK_SIZE=1500
RAG_CHUNK_OVERLAP=100
RAG_TOP_K=5

